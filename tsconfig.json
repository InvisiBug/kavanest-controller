{
  "compilerOptions": {
    // "target": "ES2021",
    // "module": "ES6",
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noUnusedLocals": false, // ! Turn this back on later
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "outDir": "dist/"
  },
  "ts-node": {
    // Do not forget to `yarn add tsconfig-paths`
    "require": ["tsconfig-paths/register"]
  },
  "include": [
    "src/*", "src/components/helpers", "src/components/database", "src/components/devices", "src/components/controllers/zigbeeControllers/index.ts"  ]
}